{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "rootDirs": ["src", "test"],
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [ "src/**/*.ts" ],
    "exclude": [ "node_modules/**/*" ]
}